@model PAV_PF_JorgeIsaacLopezV.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Iniciar Sesion</h2>

@using (Html.BeginForm("Login", "Cuenta", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Correo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Contrasena, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
                @Html.ActionLink("Registrarse", "Register", "Cuenta", null, new { @class = "btn btn-link" })
            </div>
        </div>
    </div>
}