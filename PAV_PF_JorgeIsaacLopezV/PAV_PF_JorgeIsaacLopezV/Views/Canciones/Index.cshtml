@model IEnumerable<PAV_PF_JorgeIsaacLopezV.Cancion>
@using System.Linq

@{
    ViewBag.Title = "Canciones";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string perfil = Session["PerfilNombre"] as string;
    bool esAdmin = string.Equals(perfil, "Administrador", StringComparison.OrdinalIgnoreCase);
}

<div class="page-header">
    <h2>Canciones</h2>
</div>

@if (esAdmin)
{
    <p>
        @Html.ActionLink("Crear nueva canción", "Create", null, new { @class = "btn btn-primary" })
    </p>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No hay canciones registradas en el sistema.
    </div>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Artista</th>
            <th>Precio</th>
            <th>Género</th>
            <th style="width: 260px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.codigo_cancion)</td>
                <td>@Html.DisplayFor(m => item.nombre_cancion)</td>
                <td>@Html.DisplayFor(m => item.artista)</td>
                <td>@Html.DisplayFor(m => item.precio)</td>
                <td>@Html.DisplayFor(m => item.GeneroMusical.descripcion)</td>
                <td>
                    @if (esAdmin)
                    {
                        @Html.ActionLink("Editar", "Edit", new { id = item.id_cancion }, new { @class = "btn btn-xs btn-warning" })
                        @Html.Raw(" ")
                        @Html.ActionLink("Detalles", "Details", new { id = item.id_cancion }, new { @class = "btn btn-xs btn-info" })
                        @Html.Raw(" ")
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id_cancion }, new { @class = "btn btn-xs btn-danger" })
                        @Html.Raw(" ")
                    }
                    else
                    {
                        @Html.ActionLink("Detalles", "Details", new { id = item.id_cancion }, new { @class = "btn btn-xs btn-info" })
                        @Html.Raw(" ")
                    }

                    @Html.ActionLink(
                        "Agregar al carrito",
                        "AgregarAlCarrito",
                        "Ventas",
                        new { idCancion = item.id_cancion },
                        new { @class = "btn btn-xs btn-success" }
                    )
                </td>
            </tr>
        }
    </table>
}
